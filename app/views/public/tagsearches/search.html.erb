<table class="table caption-top table-hover">
  <caption><%= @model %>s search for <%= @word %></caption>
  <thead>
      <th>店舗名</th>
      <th>レビュー数</th>
      <th>いいね数</th>
      <th>タグ</th>
    </tr>
  </thead>
  <% @shops.each do |shop| %>
  <tbody>
    <tr>
      <td><%= link_to shop.shop_name, shop_path(shop) %></td> <!--店舗名を表示-->
      <td><%= shop.reviews.count %></td> <!--レビュー数(総数)を表示-->
      <td><%= shop.favorites.count %></td> <!--いいね数(総数)を表示-->
      <td><%= shop.category %></td> <!--店舗タグ付けしているタグを表示-->
    </tr>
  </tbody>
  <% end %>
</table>