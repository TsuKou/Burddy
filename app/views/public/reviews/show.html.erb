<div class="container">
  <div class="row justify-content-center">
    <h2 class="title-background my-5"><%= @review.user.user_name %>さんのレビュー詳細</h2>
  </div>

  <div class="row justify-content-center">
    <div class="col">
      <table class="table">
        <tr>
          <th>レビュー店舗</th>
          <td><%= @review.shop.shop_name %></td>
        </tr>
        <tr>
          <th>コメントタイトル</th>
          <td><%= @review.review_title %></td>
        </tr>
        <tr>
          <th>コメント内容</th>
          <td><%= @review.review_comment %></td>
        </tr>
      </table>
    </div>
  </div>
</div>