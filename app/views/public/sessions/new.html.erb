<div class="container py-5">
  <div class="row text-center justify-content-center">
    <h2 class="title-background">ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="text-center mt-3">会員の方はこちらからログイン</div>

    <div class="row justify-content-center">
      <div class="col-4">
        <div class="form-group mt-4">
          <%= f.label :メールアドレス, class: "control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2" %>
        </div>

        <div class="form-group mt-4">
          <%= f.label :パスワード, class: "control-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group mt-4">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="form-group mt-4">
          <%= f.submit "ログイン", class: "btn btn-success btn-block" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="text-center my-5">会員登録がお済みではない方は新規登録ボタンから登録を行ってください。</div>
  <div class="row justify-content-center">
    <div class="col-4 text-center">
      <%= render "public/shared/links" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-4 text-center mt-3">
      <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
