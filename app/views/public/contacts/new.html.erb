<div class="container">
  <div class="row text-center justify-content-center">
    <h2 class="title-background mt-5 mb-4">お問い合わせ投稿フォーム</h2>
  </div>

  <%= form_with model: @contact, method: :POST, local: true do |f| %>
  <!--管理者側の店舗レビュー一覧で表示したい為、URLで「/admin/contacts」の指定と、メソッドを固定のためpostを指定-->

    <div class="row justify-content-center">
      <div class="col-5">

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :お問合せされる方の氏名, class: "control-label justify-content-start" %>
          </div>
          <div class="form-inline">
            <%= f.text_field :contact_name, size: 50, class: "form-control" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :お問い合わせ件名, class: "control-label justify-content-start" %>
          </div>
          <div class="form-inline">
            <%= f.text_field :contact_title, size: 50, class: "form-control" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :お問い合わせ内容, class: "control-label justify-content-start" %>
          </div>
          <div class="form-inline">
            <%= f.text_area :contact_message, size: "52x5", class: "form-control"  %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :" ", class: "col-md-3" %>
            <%= f.submit '送信', class: "btn btn-secondary ml-3 col-md-5" %>
          </div>
        </div>

      </div>
    </div>
  <% end %>
  
  </div>
</div>