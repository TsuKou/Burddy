<div class="container">
  <div class="row justify-content-center">
    <h2 class="mt-5 mb-5">コメント投稿フォーム</h2>
  </div>

    <%= form_with model: @comment, url: review_comments_path(@comment.review_id), method: :POST, local: true do |f| %>

    <div class="row justify-content-center">
      <div class="col-6">

        <div class="field form-group col-auto">
          <div class="form-row">
            <%= f.label :タイトル, class: "h3 control-label " %>
            <%= f.text_field :comment_title, class: "form-control" %>
          </div>
        </div>
        <div class="field form-group col-auto">
          <div class="form-row">
            <%= f.label :内容, class: "h3 control-label" %>
            <%= f.text_area :comment_body, class: "form-control" %>
          </div>
        </div>
        <div class="field form-group">
          <div class="form-inline">
            <%= f.submit '投稿', class: "form-control btn btn-success" %>
          </div>
        </div>
      <%= f.hidden_field :review_id %>
      <%#= f.hidden_field :user_id %>
    <% end %>
  </div>
</div>