<div class="container">
  <div class="row justify-content-center">
    <h2 class="mt-5 mb-4"><%= %>コメント編集</h2>
  </div>

  <%= form_with model: @comment, url: reviews_path, method: :PATCH do |f| %>

  <div class="row justify-content-center">
    <div class="col-6">

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :コメントタイトル　　　, class: "control-label mx-5" %>
          <%= f.text_field :comment_title, class: "form-control", style:"width: 60%;" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-inline">
          <%= f.label :コメント内容　　　, class: "control-label mx-5" %>
          <%= f.text_area :comment_body, class: "form-control", style:"width: 60%;" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-inline">
          <%= f.submit "変更を保存" %>
        </div>
      </div>

  </div>
</div>