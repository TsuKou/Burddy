<div class="container py-5">
  <div class="row mt-3 mb-3 offset-1 text-center">
    <h3 class="px-4 title-background">新規会員登録</h3>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row justfy-content-center"></div>
      <div class="col-10">

        <div class="field form_group">
          <div class="form-inline">
            <%= f.label :ユーザー名（英数字3文字以上）, class: "control-label justify-content-start mb-3 mx-3" %>
            <%= f.text_field :user_name, class: "form-control mb-3 mx-5" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :名前, class: "control-label col-md-3 justify-content-start mr-3" %>
            <%= f.label :"(姓)", class: "control-label mx-3" %>
            <%= f.text_field :last_name, class: "form-control mx-3", placeholder: "令和" %>
            <%= f.label :"(名)", class: "control-label mr-2" %>
            <%= f.text_field :first_name, class: "form-control ml-4", placeholder: "太郎" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
          <%= f.label :フリガナ, class: "mr-3 control-label col-md-3 justify-content-start" %>
          <%= f.label :"(セイ)", class: "mx-3 control-label" %>
          <%= f.text_field :last_name_kana, class: "form-control", placeholder: "レイワ" %>
          <%= f.label :"(メイ)", class: "mx-3 control-label" %>
          <%= f.text_field :first_name_kana, class: "form-control", placeholder: "タロウ" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :メールアドレス, class: "col-md-4 justify-content-start" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control ml-3", placeholder: "sample@example.com" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :郵便番号（ハイフン無し）, class: "col-md-4 justify-content-start" %>
            <%= f.text_field :post_code, class: "form-control ml-3", placeholder: "0000000" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :住所, class: "col-md-4 justify-content-start" %>
            <%= f.text_field :address, class: "form-control ml-3", style:"width: 54%;", placeholder: "東京都新宿区新宿1-1" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :電話番号, class: "col-md-4 justify-content-start" %>
            <%= f.text_field :telephone_number, class: "form-control ml-3", placeholder: "00000000000" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :パスワード（6文字以上）, class: "col-md-4 justify-content-start" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control ml-3" %>
          </div>
        </div>

        <div class="field form-group">
          <div class="form-inline">
            <%= f.label :パスワード（確認用）, class: "col-md-4 justify-content-start" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control ml-3" %>
          </div>
        </div>

        <div class="actions">
          <%= f.label :" ", class: "col-md-4 justify-content-start" %>
          <%= f.submit "新規登録", class: "btn btn-success px-5 ml-4 mt-4" %>
        </div>
      </div>
    </div>
  <% end %>
    <div class="row justify-content-center">
      <div class="text-center">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>




