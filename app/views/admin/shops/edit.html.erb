<div class="container">
  <div class="row justify-content-center text-center ">

    <div class="col">
      <h2 class="mt-3 mb-5"><%= @shop.shop_name %>店の店舗情報編集画面</h2>

      <%= form_with model: @shop, url: admin_shop_path, method: :PATCH do |f| %>
      <!--admin_shops_path=admin/shops/indexとしてフォーム送信先に指定-->
        <div class="row justify-content-center">
          <div class="col-2">
            <p class="my-2">店舗ID</p>
            <p class="my-4">店舗名</p>
            <p class="my-4 py-2">住所</p>
            <p class="my-4">電話番号</p>
            <p class="my-2 py-1">営業時間</p>
            <p class="py-3">定休日</p>
            <p class="py-2">アクセス情報</p>
            <p class="py-4">駐車場</p>
            <p class="py-1">メニュー</p>
            <p class="py-4">備考/注意点</p>
            <p class="py-2">タグ</p>
          </div>

          <div class="col-6 my-2">
            <div class="form-group">
              <%= @shop.id %>
            </div>
            <div class="form-group">
              <%= f.text_field :shop_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :shop_address, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :telephone_number, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :business_hours, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :regular_holiday, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_area :access_information, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :parking, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_area :menu, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_area :remarks, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :category, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row justify-content-end">
          <di></div>
          <div>
            <%= f.label :" ", class: "col-md-5 mr-5" %>
            <%= f.submit "変更保存", class: "btn btn-success col-md-2 ml-3" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>