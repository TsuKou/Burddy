<div class="container">
  <div class="row text-center justify-content-center">
    <h2 class="title-background my-5"><%= @shop.shop_name %>の店舗情報</h2>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>店舗名</th>
            <td><%= @shop.shop_name %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @shop.shop_address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @shop.telephone_number %></td>
          </tr>
          <tr>
            <th>営業時間</th>
            <td><%= @shop.business_hours %></td>
          </tr>
          <tr>
            <th>定休日</th>
            <td><%= @shop.regular_holiday %></td>
          </tr>
          <tr>
            <th>アクセス情報</th>
            <td><%= @shop.access_information %></td>
          </tr>
          <tr>
            <th>駐車場</th>
            <td><%= @shop.parking %></td>
          </tr>
          <tr>
            <th>メニュー</th>
            <td><%= @shop.menu %></td>
          </tr>
          <tr>
            <th>タグ</th>
            <td><%= @shop.category %></td>
          </tr>

          <tr>
            <td>
              <%= link_to "情報編集", edit_admin_shop_path(params[:id]), class: "btn btn-success mt-4 px-4" %> <!--(params[:id])で表示している店舗IDを取得-->
            </td>
            <td>
              <%= link_to "レビュー一覧", admin_reviews_path(params[:id]), class: "btn btn-success mt-4 ml-5 px-5" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>




















