<div><%= @user.last_name %>さんの会員情報</div>

<table>
  <tr>
    <th>登録情報</th>
    <td><%= link_to "登録情報編集", edit_admin_user_path(@user), class: "btn btn-success" %></td>
  </tr>
  <tr>
    <th>会員ID</th><td><%= @user.id %></td>
  </tr>
  <tr>
    <th>ユーザー名</th><td><%= @user.user_name %></td>
  </tr>
   <tr>
    <th>氏名</th><td><%= @user.full_name %></td>
  </tr>
   <tr>
    <th>氏名（カナ）</th><td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
  </tr>
   <tr>
    <th>郵便番号</th><td><%= @user.post_code %></td>
  </tr>
   <tr>
    <th>住所</th><td><%= @user.address %></td>
  </tr>
   <tr>
    <th>電話番号</th><td><%= @user.telephone_number %>
  </tr>
   <tr>
    <th>メールアドレス</th><td><%= @user.email %></td>
  </tr>

</table>