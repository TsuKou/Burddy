<div class="container py-4">
  <div class="row justify-content-center">
    <h2 class="title-background my-5"><%= @user.last_name %>さんの会員情報編集</h2>
  </div>

  <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>会員ID</th>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td>
                <div class="row">
                  <div class="col">
                    <%= f.text_field :last_name, class: "form-control", placeholder: "姓" %>
                  </div>
                  <div class="col">
                    <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
                  </div>
                </div>
              </td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>
                <div class="row">
                  <div class="col">
                    <%= f.text_field :last_name_kana, class: "form-control", placeholder: "セイ" %>
                  </div>
                  <div class="col">
                    <%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ" %>
                  </div>
                </div>
              </td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :telephone_number, class: "form-control" %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <th>販売ステータス</th> <!-- ラジオボックスで作成 -->
              <td>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :is_active, true, class: "form-check-input" %>
                  <label class="form-check-label">有効</label>
                </div>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :is_active, false, class: "form-check-input" %>
                  <label class="form-check-label">退会</label>
                </div>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "変更を保存", class: 'btn btn-success' %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
